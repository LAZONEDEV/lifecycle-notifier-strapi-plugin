{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "sourceMap": true,
    "incremental": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  },

  "include": ["admin", "custom.d.ts"],

  "exclude": [
    "node_modules/",
    "dist/",

    // Do not include server files in the server compilation
    "server/",
    // Do not include test files
    "**/*.test.ts"
  ],
}
